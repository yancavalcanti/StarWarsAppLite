<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/noavatar"
        android:id="@+id/peopleList_avatar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/peopleList_textViewName"
            android:text="Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/colorText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/peopleList_textViewHomeworld"
            android:text="@string/homeworld"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/colorText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/peopleList_textViewBirth"
            android:text="@string/birth"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
           />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/peopleList_textViewURL"
                android:text="url"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>